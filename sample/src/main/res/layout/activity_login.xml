<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:text="@string/enter_phone_number"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/circular_std_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="12sp"
        android:fontFamily="@font/circular_std_book"
        android:gravity="center_horizontal"
        android:text="@string/login_screen_sibtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_german_flag" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/countryCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="+49"
            android:textColor="@color/black"
            android:fontFamily="@font/circular_std_book"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumberValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_book"
            android:background="@android:color/transparent"
            android:layout_marginStart="4dp"
            android:textSize="24sp"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_bg_green"
        android:fontFamily="@font/circular_std_bold"
        android:text="@string/send_code"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendButton"
        android:visibility="gone"/>

    <GridLayout
        android:id="@+id/phoneNumbersGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendButton">

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="1"
            android:layout_gravity="end"
            style="@style/NumberButton" />

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="2"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="3"
            android:layout_gravity="start"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="4"
            android:layout_gravity="end"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="5"
            style="@style/NumberButton"/>

        <Button
            android:layout_columnWeight="1"
            android:text="6"
            android:layout_gravity="start"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="7"
            android:layout_gravity="end"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="8"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_columnWeight="1"
            android:text="9"
            android:layout_gravity="start"
            style="@style/NumberButton"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="0"
            style="@style/NumberButton"/>

        <ImageButton
            android:layout_column="2"
            android:layout_columnWeight="1"
            app:srcCompat="@drawable/ic_clear"
            android:layout_gravity="center_vertical"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </GridLayout>


</android.support.constraint.ConstraintLayout>