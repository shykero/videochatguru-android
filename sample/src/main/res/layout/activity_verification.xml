<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_verify" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:text="@string/verify_code"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/circular_std_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <LinearLayout
        android:id="@+id/numbersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/firstNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/secondNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/thirdNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fourthNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fifthNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sixthNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/rounded_bg"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="30sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/code_sent"
        android:textSize="12sp"
        android:fontFamily="@font/circular_std_book"
        app:layout_constraintTop_toBottomOf="@+id/numbersLayout"
        tools:layout_editor_absoluteX="0dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <GridLayout
        android:id="@+id/phoneNumbersGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="start"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:text="5" />

        <Button
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="start"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_columnWeight="1"
            android:layout_gravity="start"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/NumberButton"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="0" />

        <ImageButton
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_vertical"
            android:paddingEnd="30dp"
            app:srcCompat="@drawable/ic_clear"
            android:paddingRight="30dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>